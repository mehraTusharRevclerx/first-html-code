*{
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

body{
	
	font-family: sans-serif;
	background: #f7f7f7;
}
.main-nav{
	overflow: auto;
	padding: 0 3rem;
}

.main-nav .nav-logo{
	float:left;
}

.nav-logo a img{
	/* float: left; */
	width: 10rem;
}

.main-nav .nav-links{
	float: right;
	
}

ul{
	line-height: 5rem;
	float: left;
}

ul li{
	float: left; 
	list-style: none;
	padding: 0 0.5rem;
	text-decoration: none; 
	color: #000
	 /* display: inline-block;  */
}


a{
	text-decoration: none; 
	padding: 0.5rem ;
	color: #000
}

.active{
	background-color: orange;
	padding: 0.5rem;
	color: #fff;
}

.fa-bag-shopping{
	font-size: 1.9rem;
}
.fa-magnifying-glass{
	font-size: 1.5rem;
	padding: 0 0 0 0.3rem;
}
.bg-image{
	background: center / cover no-repeat url("../img/bgimg.jpg");
	height: 32.7rem;
}

.main-heading{
	font-size: 3rem;
	color: #fff;
	
}

.bg-image-sec{
	padding: 3rem 0 0 0;
	/* float: right; */
	max-width: 100%;
	width: 100%
	margin: 0 auto;	
}

.bg-image-sec p{
		padding:  0 4rem 0 0; 
		color: #fff;
		opacity: 0.4;
}
bg-image-sec{
	padding: 1rem 0 0 4rem;
}
.bg-image .bg-image-sec button{
	padding: 0.5rem 1rem;	
	color: #fff;
	border: none;
	font-weight: 700;
	cursor: pointer;
	background:orange;
	
}

.bg-image .bg-image-sec button{
	background: orange; 
	
}
.bg-image .bg-image-sec div button:last-child{
	background: black; 
}

.fa{
	padding: 0 0.5rem;
}

.about-us:hover,.services:hover,.project:hover,.blog:hover,.shop:hover,.pages:hover,.contact:hover{
		background-color: orange;
		color: #fff;
		/* padding: 0.2rem; */
		
}